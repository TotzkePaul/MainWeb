@model LocalizationConfigsModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Localization Configs</h2>
@Html.ActionLink("Polyglot", "Index")
<div>
    @using (Html.BeginForm())
    {
        <div>
            <div class="form-group row">
                <div class="col-2 text-right">@Html.LabelFor(m => m.SelectedLocalizationConfig.Id):</div><div class="col-10"> @Html.TextBoxFor(m => m.SelectedLocalizationConfig.Id, new { @class = "form-control" })</div>
            </div>
            <div class="form-group row">
                <div class="col-2 text-right">@Html.LabelFor(m => m.SelectedLocalizationConfig.Culture):</div><div class="col-10"> <select asp-for="SelectedLocalizationConfig.Culture" asp-items="@Model.CultureList"></select></div>
            </div>
            <div class="form-group row">
                <div class="col-2 text-right">@Html.LabelFor(m => m.SelectedLocalizationConfig.Key):</div><div class="col-10"> @Html.TextBoxFor(m => m.SelectedLocalizationConfig.Key, new { @class = "form-control" })</div>
            </div>
            <div class="form-group row">
                <div class="col-2 text-right">@Html.LabelFor(m => m.SelectedLocalizationConfig.Value):</div><div class="col-10"> @Html.TextBoxFor(m => m.SelectedLocalizationConfig.Value, new { @class = "form-control" })</div>
            </div>
            <div class="form-group row">
                <div class="col-2 text-right">@Html.LabelFor(m => m.SelectedLocalizationConfig.IsActive):</div><div class="col-10"> @Html.TextBoxFor(m => m.SelectedLocalizationConfig.IsActive, new { @class = "form-control" })</div>
            </div>
        </div>

        <div>
            @Html.ValidationSummary()
        </div>
        <button class="btn btn-primary">Submit</button>
    }

</div>
