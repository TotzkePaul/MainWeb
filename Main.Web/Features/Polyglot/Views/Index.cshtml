@model LocalizationConfigsModel

@{
    ViewBag.Title = "Localization Configs";
    Layout = "_Layout";
}

<h2>Localization Configs</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>




<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Culture</th>
            <th>Parent</th>
            <th>Key</th>
            <th>Value</th>
            <th>IsActive</th>
            <th>Edit</th>
            <th>Disable</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.LocalizationConfigs.Count; i++)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m => m.LocalizationConfigs[i].Id)
                </td>
                <td>
                    @Html.DisplayFor(m => m.LocalizationConfigs[i].Culture)
                </td>
                <td>
                    @Html.DisplayFor(m => m.LocalizationConfigs[i].Parent)
                </td>
                <td>
                    @Html.DisplayFor(m => m.LocalizationConfigs[i].Key)
                </td>
                <td>
                    @Html.DisplayFor(m => m.LocalizationConfigs[i].Value)
                </td>
                <td>
                    @Html.DisplayFor(m => m.LocalizationConfigs[i].IsActive)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", "Polyglot", new { Id = Model.LocalizationConfigs[i].Id })
                </td>
                <td>
                    @Html.ActionLink("Disable", "Delete", "Polyglot", new { Id = Model.LocalizationConfigs[i].Id })
                </td>
            </tr>
        }
    </tbody>
</table>