@model ConfigViewModel


@{
    ViewBag.Title = "Create";
}

@Html.Partial("Admin/AdminMenu", "ConfigsAdmin")

<h2>@ViewBag.Title.</h2>
@using (Html.BeginForm("Create", "ConfigsAdmin", FormMethod.Post, new { @class = "", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new account.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-error" })
    <div class="form-group row">
        @Html.LabelFor(m => m.SettingName, new { @class = "col-2 text-right" })
        <div class="col-10">
            @Html.TextBoxFor(m => m.SettingName, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(m => m.SettingValue, new { @class = "col-2 text-right" })
        <div class="col-10">
            @Html.TextBoxFor(m => m.SettingValue, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(m => m.SettingType, new { @class = "col-2 text-right" })
        <div class="col-10">
            @Html.TextBoxFor(m => m.SettingType, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Create" />
        </div>
    </div>
}